node ('docker2'){
    
    stage ('Checkout SCM') {
        checkout scm        
    }
    
    stage ('Build Image') {
        def customImage = docker.build("super-node-js:${env.BUILD_ID}")
    }

    stage ('Black Duck Scan') {
       hub_scan bomUpdateMaximumWaitTime: '5', cleanupOnSuccessfulScan: false, codeLocationName: '', deletePreviousCodeLocations: false, dryRun: true, excludePatterns: [[exclusionPattern: '']], hubProjectName: 'Super-Node-JS', hubProjectVersion: '2.0', hubVersionDist: 'EXTERNAL', hubVersionPhase: 'PLANNING', projectLevelAdjustments: true, scanMemory: '4096', scans: [[scanTarget: '']], shouldGenerateHubReport: true, unmapPreviousCodeLocations: false
    }
}
